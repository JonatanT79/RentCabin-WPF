<Window x:Class="Lab5.konfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5"
        mc:Ignorable="d"
        Title="konfirmation" Height="450" Width="350">
    <Window.Background>
        <LinearGradientBrush>
            <GradientStop Color="#FF007CFF" Offset="0"/>
            <GradientStop Color="#FF002245" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Rectangle 
            Width="280" 
            Height="370" 
            RadiusY="20" 
            RadiusX="400" Fill="White">
            <Rectangle.Effect>
                <DropShadowEffect 
                    BlurRadius="30" />
            </Rectangle.Effect>
        </Rectangle>

        <Grid Width="250" Height="290">
            <TextBlock ><Run/><LineBreak/><Run Text="Din bokning är nu genomförd!"/><LineBreak/><Run/></TextBlock>
        </Grid>
    </Grid>
</Window>


